<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8">
    <ImageView
        android:id="@+id/varsity_logo"
        android:layout_width="70dp"
        android:layout_height="95dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:src="@drawable/just" />
    <LinearLayout
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_marginTop="5dp"
        android:layout_height="95dp"
        android:orientation="vertical"
        >
    <TextView
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:id="@+id/varsity_name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Hello"
        android:textColor="@color/PrimaryText"
        android:backgroundTint="@color/LightPrimary"
        android:textAllCaps="false" />

        <TextView
            android:id="@+id/application_deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Application Deadline:"
            android:gravity="center"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/apply_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:text="@string/DemoLink"
            android:textColorLink="@color/AccentColor"
            />

    </LinearLayout>
    </LinearLayout>
</LinearLayout>
